{% extends 'layout.twig' %}
{% import "macro/forms.twig" as forms %}
{% if session.logged_user == null %}{% endif %}
{% block head %}
    <title>
        Tous les posts
                                    
                            
                    
            
    </title>
{% endblock %}
{% block content %}
    <h1>
        Derniers Posts    
        
    </h1>
    <a type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createPost" role="button">
        Cr√©ation d'un post
            
    </a>
    {% include 'modal/postCreateModal.twig' %}
    <div class="row d-flex">
        {% for p in posts.posts %}
        
            <div class="card m-5" style="width: 18rem;">
                {% include 'add/postOne.twig' %}
                <div class="modal fade " id="read{{ p.id }}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    {% include 'modal/postRead.twig' %}
                </div>
                {% if p.admin == 1 or session.idUs == p.id_user %}
                    <div class="modal fade " id="vue{{ p.id }}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        {% include 'modal/postModifModal.twig' %}
                    </div>
                {% endif %}
            </div>
        {% endfor %}
    </div>
{% endblock %}
