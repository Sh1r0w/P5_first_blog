{% extends 'layout.twig' %}
{% block head %}
    <title>
        Homepage Mon premier blog
                                            
                                    
                            
                    
            
    </title>
{% endblock %}
{% block content %}
    {% if session.flash != null %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ session.flash }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endif %}
    {% if session.firstname != null %}
        <div class="title mt-5 text-center">
            <H2>
                Bienvenue 
                                                                                                                                            
                                                                                                                        
                                                                                                    
                                                                                
                                                        
                                
                {{ session.firstname }}
                ,
                            
            </br>
            voici les 2 derniers posts publi√©.
                                                                                                                                
                                                                                                            
                                                                                        
                                                                    
                                            
                    
        </H2>
    </div>
    <div class="row d-flex flex-column align-content-center">
        {% for p in post.post|slice(0,2) %}
            <div class="col-5 card m-5">
                {% include 'add/postOne.twig' %}
                <div class="modal fade " id="read{{ p.id }}" tabindex="-1" aria-hidden="true">
                    {% include 'modal/postRead.twig' %}
                </div>
                <div class="modal fade " id="vue{{ p.id }}" tabindex="-1" aria-hidden="true">
                    {% include 'modal/postModifModal.twig' %}
                </div>
                {% for c in count %}
                    {% if p.id == c.0 %}
                        {{ c.1 }}
                        Commentaire(s).
                           
                                            
                    {% endif %}
                {% endfor %}
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="logo-home">
        <H1>
            Bienvenue sur Mon Premier   
                                                                            
                                                                    
                                                        
                                    
                    
        </H1>
        <img class="img-fluid" src="uploads/logo.png" alt="Mon Premier blog"></div>
    {% endif %}
{% endblock %}

