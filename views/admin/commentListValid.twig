{% extends 'admin/admin.twig' %}
{% import "macro/forms.twig" as forms %}
    {% block adminContent %}
        <table class="table table-dark table-striped">
            <thead>
              <tr>
                <th scope="col" class="d-none d-md-table-cell">#</th>
                <th scope="col">Titre du post</th>
                <th scope="col">Contenu du commentaire</th>
                <th scope="col">Auteur</th>
                <th scope="col"  class="d-none d-md-table-cell">Date d'ajout</th>
                <th scope="col">Validé</th>
              </tr>
            </thead>
            
            <tbody>
                {% for c in adminCommentList %}
              <tr>
                <th scope="row" class="d-none d-md-table-cell">{{ c.id }}</th>
                <td>{{ c.postTitle }}</td>
                <td>{{ c.content }}</td>
                <td><a href="profil?id={{ c.id_user }}" form="post" target="_blank">{{ c.lastname }} {{ c.firstname }}</a></td>
                <td class="d-none d-md-table-cell">{{ c.addDate }}</td>
                <td>
                  <div class="d-flex flex-wrap">
                 <form action="commentList?action=adminCommentUpdate&id={{ c.id }}&key={{ c.valide }}" method="post">
                  {{ forms.csrf }}
                   <button type="submit" class="btn btn-success">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg" viewBox="0 0 16 16">
                    <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425a.247.247 0 0 1 .02-.022Z"/>
                  </svg>        
                </button></form>
                 <form action="commentList?action=adminCommentDelete&id={{ c.id }}" method="post"> 
                  {{ forms.csrf }}
                 <button onClick="return confirm('Etes vous sûr de vouloir supprimer ce message ?')" type="submit" class="btn btn-danger">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                  <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
                </svg>        
                </button></form>
                </div>
                </td>
              </tr>
            
            {% endfor %}
            </tbody>
          </table>

{% endblock %}
