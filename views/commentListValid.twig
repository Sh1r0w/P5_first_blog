{% extends 'admin.twig' %}

    {% block adminContent %}
        <table class="table table-dark table-striped">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Titre du post</th>
                <th scope="col">Contenu du commentaire</th>
                <th scope="col">Auteur</th>
                <th scope="col">Date d'ajout</th>
                <th scope="col">Valid√©</th>
              </tr>
            </thead>
            
            <tbody>
                {% for c in adminCommentList %}
              <tr>
                <th scope="row">{{ c.id }}</th>
                <td>{{ c.postTitle }}</td>
                <td>{{ c.content }}</td>
                <td>{{ c.lastname }} {{ c.firstname }}</td>
                <td>{{ c.addDate }}</td>
                <td>
                 <form action="commentList?action=adminCommentUpdate&id={{ c.id }}&key={{ c.valide }}" method="post"> <button type="submit" class="btn btn-success">
                    Oui          
                </button></form></td>
              </tr>
            
            {% endfor %}
            </tbody>
          </table>

{% endblock %}